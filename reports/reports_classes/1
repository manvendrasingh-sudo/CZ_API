<?php
interface DBconnectionrable{
	public static function mysqlConnection();
	public static function mysqlClose();
}

class DBconnection implements DBconnectionrable{
	private static $servername = "localhost";
	private static $dbname = "czentrix_campaign_manager";
	private static $username = "root";
	private static $password = "sqladmin";
	private static $conn;

	// Constructor to optionally override DB config
   	public function __construct(array $config = []) {
		var_dum($config);
        	// Use provided config or fallback to defaults
        	self::$servername = $config['host']     ?? self::$servername;
	        self::$username   = $config['username'] ?? self::$username;
        	self::$password   = $config['password'] ?? self::$password;
	        self::$dbname     = $config['dbname']   ?? self::$dbname;
    	}

	public static function mysqlConnection(){
		self::$conn = mysqli_connect(self::$servername, self::$username, self::$password, self::$dbname);
		return self::$conn;
	}

	public static function mysqlClose(){
		if (self::$conn) {
			mysqli_close(self::$conn);
			self::$conn = null;
		}
	}
}
?>
